{
  "name": "Lens",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "VTEX Development Tools as Chrome Extension",
  "homepage_url": "http://www.vtex.com.br",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "tabs",
    "cookies",
    "http://*.vtex.com.br/*",
    "http://*.vtexcommerce.com.br/*",
    "http://*.vtexcommercestable.com.br/*",
    "http://*.vtexcommercebeta.com.br/*"
  ]
}